Colvarstrajfrequency    1000
Colvarsrestartfrequency 10000

colvar {
    name ProjectionZ
    width 0.1
    lowerBoundary -8.0
    upperBoundary 44.0
    lowerWallConstant 10.0
    upperWallConstant 10.0
    outputAppliedForce on

    extendedLagrangian on
    extendedTemp 295
    extendedFluctuation 0.1
    extendedTimeConstant 200
    subtractAppliedForce on

    distanceZ {
        main  {
            atomNumbers FILL_ME_IN }
        ref {
            atomsFile       FILL_ME_IN
            atomsCol        B
            atomsColValue   2.0 }
    }
}

abf {
    colvars             ProjectionZ
    fullSamples         1000
    historyFreq         1000
    writeCZARwindowFile on

    inputPrefix win01.01.czar win02.01.czar win03.01.czar win04.01.czar win05.01.czar win06.01.czar

}

metadynamics {
    colvars             ProjectionZ

    hillWeight          0.05
    newHillFrequency    333
    hillWidth           1.0
}

